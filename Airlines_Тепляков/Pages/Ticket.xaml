<Page x:Class="Airlines_Тепляков.Pages.Ticket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Airlines_Тепляков.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Ticket">

    <Grid Background="White">
        <Grid Height="80" VerticalAlignment="Top" Background="#476BD6">
            <Image Source="/Images/airline.png" Height="60" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"/>
            <Label Content="Управление авиалиниями" FontSize="20" Foreground="White" FontFamily="Corbel" FontWeight="Bold" Margin="80,22,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Button Content="Вернуться" Height="30" Width="120" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,25,10,0" Click="Back"/>
        </Grid>
        <Grid Margin="0,80,0,0">
            <ScrollViewer Margin="10,10,10,10">
                <StackPanel x:Name="parrent"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
